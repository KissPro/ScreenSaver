@model ScreenSaver.Model.ImageModel

@using (Html.BeginForm("Edit", "Images", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row bg-light" style="height:150px;">
        <div class="col-md-3">
            <img height="100" width="120" class="img" src="@Model.Url" alt="">
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.Type)
        </div>
        <div class="col-md-3">
            Form:
            <div class='input-group date' id='datetimepicker4'>
                @*<input type='text' class="form-control" />*@
                @Html.EditorFor(model => model.TimeFrom, new { htmlAttributes = new { @class = "form-control date-picker" } })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
        <div class="col-md-3">
            To:
            <div class='input-group date' id='datetimepicker5'>
                @*<input type='text' class="form-control" />*@
                @Html.EditorFor(model => model.TimeTo, new { htmlAttributes = new { @class = "form-control date-picker" } })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-block btn-lg btn-success btnUp" value="Update">
        </div>
    </div>
}


<script type="text/javascript">
    $(function () {
        $('#datetimepicker4').datetimepicker({
            defaultDate: Date.now(),
        });
        $('#datetimepicker5').datetimepicker({
            defaultDate: Date.now(),
        });
    });
</script>