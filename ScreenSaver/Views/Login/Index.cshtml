@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>This is login page</title>

    <!-- Bootstrap and Javascript core -->
    <link href="/Assets/Client/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Assets/Client/css/landing-page.min.css" rel="stylesheet">
    <script src="/Assets/Client/vendor/jquery/jquery.min.js"></script>
    <script src="/Assets/Client/vendor/jquery/jquery-ui.min.js"></script>
    <link href="/Assets/Client/css/jquery-ui.min.css" rel="stylesheet" />
    <script src="/Assets/Client/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/Client/js/jquery-1.11.min.js"></script>
    <script src="~/Assets/Client/js/bootstrap.min.js"></script>

    <!-- Custom fonts for this template -->
    <link href="/Assets/Client/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="/Assets/Client/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="/Assets/Client/vendor/pnotify/css/pnotify.css" rel="stylesheet" />
    <link href="/Assets/Client/vendor/pnotify/css/pnotify.brighttheme.css" rel="stylesheet" />
    <link href="/Assets/Client/vendor/pnotify/css/pnotify.buttons.css" rel="stylesheet" />
    <script src="~/Assets/Client/vendor/pnotify/js/pnotify.js"></script>
    <script src="~/Assets/Client/vendor/pnotify/js/pnotify.buttons.js"></script>
    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />

    <link href="/Assets/Client/css/Login.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div>
        <form method="post" action="index.html">
            <div class="box">
                <h1>Screen Saver Portal</h1>
                <a href="@ViewBag.Url"><div class="btn">Login with AD</div></a> <!-- End Btn -->
            </div> <!-- End Box -->
        </form>
    </div>

    @if (TempData["notify-content"] != null)
    {
        <script>
                $(document).ready(function () {
                new PNotify({
                    title: '@TempData["notify-title"]',
                    text: '@TempData["notify-content"]',
                    type: '@TempData["notify-type"]',
                    delay: '5000',
                });
            });
        </script>
    }
</body>
</html>

